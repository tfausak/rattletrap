    scientific ^>= 0.3.6,
    template-haskell ^>= 2.13.0,
    text ^>= 1.2.3,
    transformers ^>= 0.5.5,
  default-language: Haskell2010
  ghc-options:
    -optP -Wno-nonportable-include-path
    -Weverything
    -Wno-all-missed-specialisations
    -Wno-implicit-prelude
    -Wno-missing-exported-signatures
    -Wno-missing-import-lists
    -Wno-safe
